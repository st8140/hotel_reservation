<div class="container-field room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <a href="<%= "/rooms/#{room.id}" %>">
              <% if room.persisted? && room.room_image? %>
                <%= image_tag room.room_image.to_s, class: "room-posts-image" %>
              <% else %>
                <%= image_tag "room_default.jpg", class: "room-posts-image" %>
              <% end %>  
            </a>
          </td>
          
          <td class="posts-name">
            <%= link_to(room.room_name, room) %>
          </td>
          
          <td class="posts-content"><%= room.room_introduction %></td>
          
          <td class="price-icon"><%= room.charge %></td>
          
          <td><%= room.created_at.to_s(:datetime_jp) %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>