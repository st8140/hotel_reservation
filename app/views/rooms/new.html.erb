<div class="container-field room-new">
  <div class="row">
    <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
      <ul>
        <li class="active">
          <%= link_to("基本情報", "/rooms/new") %>
        </li>
      </ul>
    </div>
    
    <div class="col-lg-2 room-nav room-nav-mobile d-lg-none">
      <ul>
        <li class="active">
          <%= link_to("基本情報", "/rooms/new") %>
        </li>
      </ul>
    </div>
    
    <div class="col-lg-10 room-view">
      <div class="room-view-box">
        <%= form_for @room do |f| %>
        
        <%= render "shared/error_message", model: f.object %>
        
          <div class="update-content">
            <div class="row">
              <h5>ルーム情報登録</h5>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="room_name">ルーム名</label>
              <%= f.text_field :room_name, class: "form-control mb-4 col-md-9", placeholder: "ルーム名を入力" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="introduction">ルーム名</label>
              <%= f.text_area :introduction, class: "form-control mb-4 col-md-9", placeholder: "ルーム説明を入力", size: "30x5" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="charge">料金</label>
              <%= f.number_field :charge, class: "form-control mb-4 col-md-9", placeholder: "1日あたりの料金を入力" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="address">住所</label>
              <%= f.text_field :address, class: "form-control mb-4 col-md-9", placeholder: "住所" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="room_image">ルーム画像</label>
              <%= f.file_field :room_image, class: "mb-4 col-md-9", placeholder: "ルーム画像をアップロード" %>
            </div>
          </div>
          
          <%= f.hidden_field :user_id, value: current_user.id %>
        
        <div class="update-content">
            <div class="row">
              <%= f.submit "登録", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        
        
        <% end %>
        
        
      </div>
      
    </div>
    
    
  </div>
  
</div>