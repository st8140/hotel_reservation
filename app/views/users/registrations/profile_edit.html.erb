<div class="container-field user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li>
          <%= link_to("アカウント" ,"/users/account") %>
        </li>
        
        <li class="active">
          <%= link_to("プロフィール" ,"/users/profile") %>
        </li>
        
      </ul>
    </div>
    
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li>
          <%= link_to("アカウント" ,"/users/account") %>
        </li>
        <li class="active">
          <%= link_to("プロフィール" ,"/users/profile") %>
        </li>
      </ul>
    </div>
    <div class="col-lg-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール</h5>
          </div>
        </div>
        
        <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
      
        <%= render "shared/error_message", model: f.object %>

          <div class="update-content">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <% if current_user.persisted? && current_user.user_image? %>
                    <%= image_tag current_user.user_image.to_s, alt: "アイコン画像", class: "icon-image host-icon" %>
                  <% else %>
                    <% image_tag "default.jpg", alt: "アイコン画像", class: "icon-image host-icon" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="image">アイコン画像</label>
              <%= f.file_field :user_image, class: "mb-4 col-md-9", placeholder: "アイコン画像をアップロード" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="name">名前</label>
              <%= f.text_field :name, class: "form-control mb-4 col-md-9", placeholder: "名前を入力" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a" for="introduction">自己紹介</label>
              <%= f.text_area :introduction, class: "form-control mb-4 col-md-9", placeholder: "自己紹介を入力", size: "30x10" %>
            </div>
          </div>
          
          <div class="update-content">
            <div class="row">
              <%= f.submit "更新", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
       <% end %>
        
      </div>
    </div>
  </div>
</div>