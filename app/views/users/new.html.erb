<div class="container device">
  <div class="device-form">
    <p class="my-4">新しいアカウントを作成</p>
    <div class="device-inner">
      <%= form_for @user do |f| %>
        
        <%= render "shared/error_message", model: f.object %>
        
        
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.text_field :name, class: "form-control col-10 px-2", placeholder: "ユーザー名"%>
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.text_field :email, class: "form-control col-10 px-2", placeholder: "メールアドレス" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password, class: "form-control col-10 px-2", placeholder: "パスワード" %>
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password_confirmation, class: "form-control col-10 px-2", placeholder: "パスワード確認" %>
        </div>
        
        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class: "form-control btn-primary my-4 "%>
        </div>
      <% end %>
      <a href="/users/login">既にアカウントをお持ちの方はログイン</a>
      <br>
    </div>
    
  </div>
</div>