<div class="container device">
  <div class="device-form">
    <p class="my-4">ログイン</p>
    <div class="device-inner">
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.email_field :email, class: "form-control col-10 px-2", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
      
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password, class: "form-control col-10 px-2", autocomplete: "current-password", placeholder: "パスワード"%>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン", class: "form-control btn-primary my-4" %>
        </div>
      <% end %>
      <a href="sign_up">新しいアカウントを作成</a>
      <br>
    </div>
  </div>
  
</div>


